<div class="container" ng-app="WonderCampersApp">
  <div ng-controller="NavCtrl">


    <div layout="column" layout-fill>
      <md-toolbar>
        <div class="md-toolbar-tools">
          <img src="/images/REI_logo.gif">
          <span flex="33" class="header-text" layout-align="start end">Wonder Campers</span>
          <!-- fill up the space between left and right area -->
          <span flex></span>
          <md-button>
            <span ng-if="currentUser">
              Hello, {{currentUser.firstName || 'Unknown User'}}
            </span>
            <md-button class="md-raised" ng-hide="currentUser"><a ng-click="showSignup($event)">Signup</a></md-button>
            <md-button class="md-raised" ng-hide="currentUser"><a ng-click="showLogin($event)">Login</a></md-button>
            <md-button class="md-raised" ng-show="currentUser"><a ng-click="logout()">Logout</a></md-button>
          </md-button>
        </div>
      </md-toolbar>
      <md-toolbar layout="row" class="navbar">
        <div flex class="navbar-button">
          <div layout="column" layout-align="end center">
            <a href="/" class="navbar-link" ng-class="navClass('home')">Home</a>
          </div>
        </div>
        <div flex class="navbar-button">
          <div layout="column" layout-align="end center">
            <a href="/discover" class="navbar-link" ng-class="navClass('discover')">Discover</a>
          </div>
        </div>
        <div flex class="navbar-button">
          <div layout="column" layout-align="end center">
            <a href="/plan" class="navbar-link" ng-class="navClass('plan')">Plan</a>
          </div>
        </div>
        <div flex class="navbar-button">
          <div layout="column" layout-align="end center">
            <a href="/share" class="navbar-link" ng-class="navClass('share')">Share</a>
          </div>
        </div>
        <div flex class="navbar-button">
          <div layout="column" layout-align="end center">
            <a href="/about" class="navbar-link" ng-class="navClass('about')">About</a>
          </div>
        </div>
      </md-toolbar>
      <md-content>
        <ng-view></ng-view>
      </md-content>
    </div>
  </div>
</div>
